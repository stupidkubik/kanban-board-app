rules_version = "2";

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isMember() {
      return isSignedIn() && resource.data.members[request.auth.uid] == true;
    }

    function isMemberInNewData() {
      return isSignedIn() && request.resource.data.members[request.auth.uid] == true;
    }

    match /boards/{boardId} {
      allow read: if isMember();
      allow create: if isMemberInNewData();
      allow update, delete: if isMember() && isMemberInNewData();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
